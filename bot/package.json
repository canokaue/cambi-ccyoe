{
  "name": "@cambi/ccyoe-bot",
  "version": "1.0.0",
  "description": "Cambi CCYOE Monitoring and Automation Bot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dry-run": "DRY_RUN=true npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:monitors": "jest --testPathPattern=monitors",
    "test:rebalancer": "jest --testPathPattern=rebalancer",
    "test:alerts": "jest --testPathPattern=alerts",
    "test:integration": "jest --testPathPattern=integration",
    "rebalance": "ts-node scripts/manual-rebalance.ts",
    "health-check": "ts-node scripts/health-check.ts",
    "emergency-pause": "ts-node scripts/emergency-pause.ts",
    "status": "ts-node scripts/status.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "viem": "^2.21.0",
    "@noble/hashes": "^1.5.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "winston": "^3.14.0",
    "express": "^4.19.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "joi": "^17.13.0",
    "redis": "^4.7.0",
    "pg": "^8.12.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.0",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^8.11.0",
    "typescript": "^5.5.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.3.0"
  },
  "keywords": [
    "defi",
    "ccyoe",
    "automation",
    "monitoring",
    "cambi",
    "viem",
    "ethereum"
  ],
  "author": "Cambi Protocol",
  "license": "MIT"
}