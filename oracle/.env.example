# Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
CHAIN_ID=11155111

# Alternative RPC URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# API Keys
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY

# Contract Addresses (update after deployment)
ORACLE_CONTRACT_ADDRESS=0x...
CCYOE_CORE_ADDRESS=0x...

# Data Provider API Keys
LIQI_API_KEY=your_liqi_api_key
B3_API_KEY=your_b3_api_key
BACEN_API_KEY=your_bacen_api_key
ITAU_API_KEY=your_itau_api_key

# Oracle Configuration
UPDATE_INTERVAL=3600
CONFIDENCE_THRESHOLD=80
MAX_DEVIATION_THRESHOLD=5.0
HEARTBEAT_TIMEOUT=7200

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=1800

# Logging
LOG_LEVEL=info
LOG_FILE=logs/oracle.log

# Monitoring & Alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
ALERT_EMAIL=alerts@cambi.com

# Health Check
HEALTH_CHECK_PORT=3001
HEALTH_CHECK_INTERVAL=300

# Gas Configuration
MAX_GAS_PRICE=50
GAS_LIMIT=200000

# Security
ENABLE_SIGNATURE_VERIFICATION=true
ORACLE_PRIVATE_KEY=0xYOUR_ORACLE_SIGNING_KEY

# Environment
NODE_ENV=development
